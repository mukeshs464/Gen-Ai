{
  "manifest_version": 3,
  "name": "Project Sentinel",
  "version": "0.1",
  "description": "Detects misinformation patterns.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
